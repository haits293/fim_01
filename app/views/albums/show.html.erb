<div class="row">
  <div class="col-md-4">
    <h3><%= @album.name %></h3>
    <%= t(".views") + " #{@album.impressionist_count}" %>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="audio-player">
          <audio id="audio-player" src="<%= @album.songs.first.audio.url %>"
            type="audio/mp3" controls="controls" autoplay></audio>
        </div>
        <ul class="list-group">
          <% @album.songs.each do |song| %>
            <li class="list-group-item">
              <%= link_to song.audio_file_name, "#",
                class: "song-link", source: song.audio.url %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="small-2 large-4 columns">
    <% if user_signed_in? %>
      <%= rating_for @album, "evaluation",
        disable_after_rate: true, imdb_avg: true, target: "#hintDiv",
        targetText: t(".rate_this"), space: true, cancel_place: "right" %>
      <div id="hintDiv"></div>
    <% end %>
  </div>
</div>

<%= render "comments/form" if user_signed_in? %>

<ul>
  <% if @support.comments %>
    <%= comments_tree_for @support.comments %>
  <% end %>
</ul>
