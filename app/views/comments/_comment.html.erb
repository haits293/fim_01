<li>
  <small>Submitted <%= time_ago_in_words comment.created_at %> ago</small>

  <blockquote>
    <p><%= comment.content %></p>
  </blockquote>

<% from_reply_form ||= nil %>
<% unless from_reply_form %>
  <p>
    <%= link_to t(".reply"), song_new_comment_path(song_id: @commentable.id,
      parent_id: comment.id) %>
  </p>
<% end %>
</li>
