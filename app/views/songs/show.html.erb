<div class="row">
  <div class="col-md-4">
    <h3><%= @song.audio_file_name %></h3>
    <span class="glyphicon glyphicon-leaf"></span>
    <%= @song.audio_file_size %><br/>
  </div>
  <div class="col-md-8">
    <div class="audio-player">
      <img class="cover" src="img/cover.png" alt="">
      <audio id="audio-player" src="<%= @song.audio.url %>"
        type="audio/mp3" controls="controls"></audio>
    </div>
  </div>
</div>
<div class="row">
  <div class="small-2 large-4 columns">
    <% if current_user %>
      <%= rating_for @song, "evaluation",
        disable_after_rate: true, imdb_avg: true, target: "#hintDiv",
        targetText: "Rate This!" %>
      <div id="hintDiv"></div>
    <% end %>
  </div>
</div>
<%= render "comments/form" %>

<ul>
  <% if @support.comments %>
    <%= comments_tree_for @support.comments %>
  <% end %>
</ul>
